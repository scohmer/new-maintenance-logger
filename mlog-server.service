[Unit]
Description=Maintenance Logger FastAPI Server
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/opt/mlog-server
Environment="PATH=/opt/mlog-server/.venv/bin"
ExecStart=/opt/mlog-server/.venv/bin/uvicorn main:app \
    --host 0.0.0.0 \
    --port 443 \
    --ssl-keyfile /opt/mlog-server/tls/servername.domain.com.key \
    --ssl-certfile /opt/mlog-server/tls/servername.domain.com.crt
Restart=always

[Install]
WantedBy=multi-user.target
